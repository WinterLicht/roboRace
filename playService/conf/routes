#API
POST          /api/games                        controller.GameController.create()
GET           /api/games/:id                    controller.GameController.state(id:String)
DELETE        /api/games/:id                    controller.GameController.delete(id: String)

POST          /api/games/:id/commands           controller.GameController.sendCommand(id: String)
GET           /api/games/:id/events             controller.GameController.sse(id: String)

#Frontend
GET           /                                 controller.FrontendController.index()
GET           /games/:id/players/:player        controller.FrontendController.game(id: String, player: String)
GET           /roboRally.js                     controllers.Assets.at(file = "roboRally.js")
GET           /roboRally.css                    controllers.Assets.at(file = "roboRally.css")
GET           /lobby.js                         controllers.Assets.at(file = "lobby.js")
GET           /favicon.ico                      controllers.Assets.at(file = "favicon.icon")
GET           /default-scenario                 controller.FrontendController.defaultScenario()